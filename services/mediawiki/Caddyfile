(mediawiki) {
	import securitytxt
	redir /sitemap.xml /sitemap/sitemap-index-wiki{args[0]}.xml permanent
	handle /sitemap/* {
		uri strip_prefix /sitemap
		root /var/lib/mediawiki/sitemap/{args[0]}
		file_server
	}
	handle {
		root * /opt/mediawiki
		php_fastcgi unix//var/run/mediawiki/php-fpm.sock {
			env MW_WIKI {args[0]}
		}
		file_server
	}
}

uploads.w.xvnet.eu.org uploads.w.xvnet0.eu.org http://uploads.wiki.xvn {
	import securitytxt
	handle {
		root * /var/lib/mediawiki
		header Access-Control-Allow-Origin *
		redir / https://w.xvnet.eu.org/w/uploads.w.xvnet.eu.org permanent
		file_server /images/*
	}
}

meta.w.xvnet.eu.org meta.w.xvnet0.eu.org http://meta.wiki.xvn {
	import mediawiki "meta"
}

w.xvnet.eu.org w.xvnet0.eu.org http://wiki.xvn {
	import mediawiki "xvnet"
}

